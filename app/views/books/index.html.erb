<h1>Books</h1>

<!-- テーブル -->
<table width='auto' >
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

		<%  @books.each do |book|%>
		<tr>
		<td>
			<span><%= book.title %></span>
		</td>

		<td>
			<span><%= book.body %></span>
		</td>

		<td>
		<%= link_to 'Show', book_path(book.id), class: 'show_#{@book.id}' %>
		</td>

		<td>
		<%= link_to 'Edit',edit_book_path(book.id), class: 'edit_#{book.id}'  %>
		</td>

		<td>
		<%= link_to 'Destroy', book_path(book.id),  class: 'edit_#{book.id}', method: :delete, 'date-confirm' =>'本当に削除しますか？' %><br>
		</td>
		</tr>
		<%end%>
</table>

<h2>New book</h2>
<!-- form_for -->
<%= form_for(@book) do |f| %>


<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>


<!-- 投稿フォーム -->

	<h4>Title</h4>
	<%= f.text_field :title, class: 'book_title' %>

	<h4>Body</h4>
	<%= f.text_area :body, class: 'book_body' %><br>

	<%= f.submit 'Create Book' %>

<% end %>