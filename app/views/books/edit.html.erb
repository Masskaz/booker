<h1>Editing Book</h1>

<!-- form_for -->
<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %><br>

	<%= f.submit 'Update Book' %>

<% end %>

	<br><%= link_to 'Show', book_path(@book.id), class: "show_#{@book.id}" %>
	<%= link_to 'Back','http://localhost:3000/books',class: 'back' %>